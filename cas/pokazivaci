#include <iostream>
#include<math.h>


using namespace std;

int niz2[1000];//radi na data segmentu


void zbir(int* a,int n,int* b, int m){
    int d=(m>n?m:n)+1;
    int* rezultat = new int[d];
    int i=n-1;
    int j=m-1;
    int k=d-1;
    int prenos=0;
    while(i>=0 && j>=0){
        rezultat[k]=a[i]+b[j]+prenos%10;
        prenos=(a[i]+b[j]+prenos)/10;
        i--;
        j--;
        k--;
    }

    while(i>=0){
        rezultat[k]=(a[i]+prenos)%10;
        prenos=(a[i]+prenos)/10;
        i--;
        k--;
    }

    while(j>=0){
        rezultat[k]=(b[j]+prenos)%10;
        prenos=(b[j]+prenos)/10;
        j--;
        k--;
    }
    rezultat[k]=prenos;

    for(k=0;k<d;k++){
        if(rezultat[0]==0 && k==0){
            continue;
        }else{
            cout << rezultat[k];
        }
        cout <<endl;
    }
}


float polinom2(float *a, int n, float x){
    float v=0;
    float stepen=1;
    for(int i=0;i<n;i++){
        v+=a[i]*stepen;
        stepen *=x;
        }
    return v;
}


void f1(int a[],int n){
    a[0]=19;

}

void f2(int *a,int n){
    a[0]=21;
}

float polinom(float* a,int n, float x){
   float v;
   for(int i=0;i<n;i++){
    v+=a[i]*pow(x,i);
   }

   return v;
}


